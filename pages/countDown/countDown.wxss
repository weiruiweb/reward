/**index.wxss**/
@import "../../wxParse/wxParse.wxss"
page{
	width: 100%;
	min-width:100%;
}
.reward{
	width: 100%;
	height:100vh;
	position: relative;
}
.reward_bg{
	width: 100%;
	min-height:100%;
	position: absolute;
	left: 0;
	top:0;
}
.reward_bg image{
	width:100%;
	height:100vh;
}
.reward_btn{
	width:100%;
	height:126rpx;
	position: absolute;
	left:0;
	top:26%;
}
.btn_bg{
	width:480rpx;
	height:72rpx;
	margin:0 auto;
	overflow:hidden;
	border-radius:50rpx;
}
.btn_bg1{
	width:100%;
	height:100%;
	background:#ffd96c;
}
.btn_bg2{
	width:460rpx;
	height:58rpx;
	background:#ffbe04;
	border-radius:30rpx;
	margin:0 auto;
	text-align:center;
	line-height:58rpx;
}
.reward_cont{
	width:94.8%;
	padding:0 2.6%;
	position: absolute;
	left:0;
	top:40%;
}
.reward_box{
	width:100%;
	height:370rpx;
}
.reward_box image{
	width:100%;
	height:100%;
}
.reward_time{
	width:100%;
	height:100%;
	position: absolute;
	left:0;
	top:0;
}
.time_box{
	width:100%;
	height:74rpx;
}
.time_day{
	width:21%;
	height:74rpx;
	margin-left: 0.5%;
}
.time1{
	width:80%;
	height:100%;
	position: relative;
}
.time2{
	width:20%;
	height:100%;
}
.time1 image{
	width:124rpx;
	height:74rpx;
}
.day{
	width:100%;
	height: 100%;
	position: absolute;
	left:0;
	top:0;
	font-size:56rpx;
	color:#fff;
	text-align: center;
	overflow:hidden;
}
.days{
	line-height: 120rpx;
}
.day_cont{
	width:100%;
	height:74rpx;
	margin-left:12rpx;
	letter-spacing:28rpx;
	color:#fff;
}